<!DOCTYPE HTML>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <meta name="author" content="Johan LOPES" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
            <!--Stylesheet-->
            <link rel="stylesheet"  href="{{ asset('bundles/johanlopescore/css/main.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/johanlopescore/fancybox/jquery.fancybox-1.3.4.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/johanlopescore/css/flexslider.css') }}" />
            <link rel="stylesheet" href="{{ asset('bundles/johanlopescore/css/fontello.css') }}" />
            <!--[if IE 7]>
                <link rel="stylesheet" href="{{ asset('bundles/johanlopescore/css/fontello-ie7.css') }}">
            <![endif]-->
            <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400,600,300,800,700,400italic|PT+Serif:400,400italic"/>

            <!--[if lt IE 9]>
                <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
            <![endif]-->

            <!--[if lt IE 8]>
                <style>
                /* For IE < 8 (trigger hasLayout) */
                .clearfix {
                    zoom:1;
                }
                </style>
            <![endif]-->
        {% endblock stylesheets %}
    </head>

    <body>
        <!--Wrapper-->
        <div id="wrapper">
            {% include 'JohanlopesCoreBundle::header.html.twig' %}

            <!--Main content-->
            <div id="mainContent" class="clearfix">
                {% include 'JohanlopesCoreBundle::slider.html.twig' %}

                <!--Inner Content-->
                <div id="innerContent" class="clearfix">
                    {% block content %}{% endblock content %}

                    {% include 'JohanlopesCoreBundle::footer.html.twig' %}
                </div>
                <!--End inner Content-->
            </div>
            <!--End main content-->
        </div>
        <!--End wrapper-->

        <!--Javascript-->
        {% block javascripts %}
            <script src="{{ asset('bundles/johanlopescore/js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery-migrate-1') }}.2.1.js"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.quicksand.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.easing.1.3.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.flexslider.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.fancybox-1.3.4.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.mousewheel-3.0.4.pack.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/slides.min.jquery.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.scrollTo-min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/waypoints.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.tweet.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/johanlopescore/js/jquery.gmap.min.js') }}" type="text/javascript"></script>
            <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
            <script src="{{ asset('bundles/johanlopescore/js/script.js') }}" type="text/javascript"></script>

            <script type="text/javascript">
                //<![CDATA[
                //---------------------------------- Twitter feed -----------------------------------------//
                $(document).ready(function(){
                    jQuery(".icon-twitter-bird-footer").tweet({
                      join_text: false,
                      username: "BenaissaGhrib", // Change username here
                      modpath: './twitter/',
                      avatar_size: false,
                      count: 1,
                      auto_join_text_default: ' we said, ',
                      auto_join_text_ed: ' we ',
                      auto_join_text_ing: ' we were ',
                      auto_join_text_reply: ' we replied to ',
                      auto_join_text_url: ' we were checking out ',
                      loading_text: 'Loading tweets...'

                  });
                });
                //]]>
                //---------------------------------- End witter feed -----------------------------------------//
            </script>

            <!-- Google analytics -->

            <!-- End google analytics -->
        {% endblock javascripts %}
    </body>
</html>
