<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="class.guzzle.response">Guzzle\Http\Message\Response</parameter>
    </parameters>

    <services>
        <service id="guzzle.twitter.client" class="GuzzleHttp\Client">
            <argument type="collection">
                <argument type="string"  key="base_uri">https://api.twitter.com/1.1/</argument>
                <argument type="service" key="handler" id="guzzle.twitter.stack" />
                <argument type="string"  key="auth">oauth</argument>
            </argument>
            <argument>https://api.twitter.com/1.1</argument>

        </service>

        <service id="guzzle.twitter.stack" class="GuzzleHttp\HandlerStack">
            <factory class="GuzzleHttp\HandlerStack" method="create" />
            <call method="push">
                <argument type="service" id="guzzle.twitter.oauth" />
            </call>
        </service>

        <service id="guzzle.twitter.oauth" class="GuzzleHttp\Subscriber\Oauth\Oauth1">
            <argument type="collection">
                <argument type="string"  key="consumer_key">%twitter_consumer_key%</argument>
                <argument type="string"  key="consumer_secret">%twitter_consumer_secret%</argument>
                <argument type="string"  key="token">%twitter_token%</argument>
                <argument type="string"  key="token_secret">%twitter_token_secret%</argument>
            </argument>
        </service>

    </services>

</container>
